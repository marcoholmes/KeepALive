@using KeepAlive.Models
@model LoginViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-sm-6 form-white">
        <h2>Effettua il login</h2>
        <form>
            <div class="form-group">
                @*<label for="exampleInputEmail1">Email address</label>*@
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Username o email">
            </div>
            <div class="form-group">
                @*<label for="exampleInputPassword1">Password</label>*@
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox"> Mantieni l'accesso
                </label>
            </div>

            <button type="submit" class="btn btn-default bottom-margin-10">Accedi</button>

            <div>
                <a href="">Hai dimenticato le tue credenziali?</a>
            </div>

            <div>
                <a href="">Registrati</a>
            </div>
        </form>
    </div>

    <div class="col-sm-6">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Content/images/folder-cloud.jpg" alt="..." />
                    <div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/images/datamgt2-resize.jpg" alt="..." />
                    <div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/images/cloud-technology.jpg" alt="..." />
                    <div class="carousel-caption">

                    </div>
                </div>

            </div>
        </div>

    </div>

</div>

