@using KeepAlive.Models

@model UserRecoveryViewModel

<div>
    <h2>Recupero Username</h2>

    <div class="row top-margin-20">
        Digita l'email che hai usato durante la registrazione:
        @using (Ajax.BeginForm("UserRecovery", "Account", null, new AjaxOptions()
        {
            UpdateTargetId = "account",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST"
        }))
        {
            <div class="top-margin-20 form-group col-sm-12 center-block">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="bottom-margin-20 col-sm-12">
                <button type="submit" class="btn btn-default">
                    <span>Avanti</span>
                </button>
            </div>
        }


    </div>

</div>

@Html.Partial("Partial/Common/MakeLogin")
@Html.Partial("Partial/Common/MakeRegister")




